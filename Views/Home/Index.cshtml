@model List<Semhan.UsuarioSet>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js" type="text/javascript"></script>
<link href="~/css/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
<link href="~/css/font-awesome/css/regular.min.css" rel="stylesheet" />
<link href="~/css/font-awesome/css/solid.min.css" rel="stylesheet" />

<style>
    .container-table {
        padding: 5% 150px 0px 150px;
    }
</style>

<center><h1>CRUD de Vicky 😜</h1></center>
<div class="container-table">

    <a type="button" class="btn btn-success" href='@Url.Action("crearUsuario", "Home")' style="float:right; margin-top:30px; margin-bottom:10px; margin-right:15px">Agregar Usuario <i class="fas fa-user-plus"></i></a>
    <table id="Tabla" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-dark table-striped">
            <tr>
                <th>Id</th>
                <th style=background-color:#FF5C5C;font-weight:900;color:#ffffff;text-align:center;>Nombre</th>
                <th style=background-color:#48973E;font-weight:900;color:#ffffff;text-align:center;>Apellido</th>
                <th>Acciones</th>

            </tr>
        </thead>

        <tbody class="table-hover">

            @foreach (var usuario in Model)
            {

                <tr>
                    <td>@usuario.id</td>
                    <td>@usuario.nombre</td>
                    <td>@usuario.apellido</td>

                    <td>
                        <a class="btn btn-success" href="@Url.Action("editarUsuario", "Home", new { usuarioId = usuario.id })"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-danger" href='#' onclick="confirm('¿Está seguro que quiere dar de baja a ' + '@usuario.nombre?') ? window.location = '@Url.Action("eliminarUsuario", "Home", new { usuarioId = usuario.id })' : null" data-nombre="@usuario.nombre"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

